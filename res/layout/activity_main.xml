<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recognize_2015_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartGameActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/img_represent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/theme_display_image"
            android:scaleType="centerCrop"
            android:src="@drawable/mustaches_represent" 
            android:padding="5dp" />

        <ImageView
            android:background = "@drawable/recognize_2015_start"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/theme_display_image"
            />
            
        <ImageView
            android:id="@+id/play_game"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignBottom="@+id/img_represent"
            android:layout_alignRight="@+id/img_represent"
            android:contentDescription="@string/desc" />
        
        <TextView
            android:id="@+id/album_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:contentDescription="@string/theme_display_image"
            android:layout_alignBottom="@+id/img_represent"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Test" />

    </RelativeLayout>
    <HorizontalScrollView      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout 
            android:id="@+id/trends_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">       
            
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_marginRight="10dp"
                android:background="#f6921e"
                android:paddingBottom="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:radius="5dp" >

		            <ImageView
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:contentDescription="@string/theme_display_image"
			            android:scaleType="centerCrop"
			            android:src="@drawable/mustaches_represent" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_marginRight="10dp"
                android:background="#f6921e"
                android:paddingBottom="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:radius="5dp"
                android:orientation="vertical" >

                <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:contentDescription="@string/theme_display_image"
                  android:scaleType="centerCrop"
                  android:src="@drawable/mustaches_represent" />
                
                <TextView
			            android:layout_width="match_parent"
			            android:layout_height="40dp"
			            android:contentDescription="@string/theme_display_image"
			            android:padding="5dp"
			            android:textSize="20sp"
			            android:textStyle="bold"
			            android:text="Test" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_marginRight="10dp"
                android:background="#f6921e"
                android:paddingBottom="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:radius="5dp" >

                <ImageView
                  android:id="@+id/img_album_tile"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:contentDescription="@string/theme_display_image"
                  android:scaleType="centerCrop"
                  android:src="@drawable/mustaches_represent" />
            </LinearLayout>
            
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp">
        
        <ImageView
            android:id="@+id/settings_view"
            android:layout_height="80dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp" 
            android:contentDescription="@string/theme_options"/>
        
        <ImageView
            android:id="@+id/albums_view" 
            android:layout_height="80dp"
            android:layout_width="0dp" 
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:contentDescription="@string/theme_albums"/>
    </LinearLayout>
        
</LinearLayout>
